- content_for(:title, 'Log in')
.row
	.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
		= form_for(:session, url: login_path, :html => {:class => 'form-horizontal'}, :role => 'form') do |f|
			.form-group
				= f.label :email, :class => 'col-sm-2 control-label'
				.col-sm-10
					= f.text_field :email, :class => 'form-control', :placeholder => 'Email'
			.form-group
				= f.label :password, :class => 'col-sm-2 control-label'
				.col-sm-10
					= f.password_field :password, :class => 'form-control'
			.form-group
				.col-sm-offset-2.col-sm-10
					.checkbox
						%label
							= f.check_box :remember_me
							Remember me
						%span.glyphicon.glyphicon-exclamation-sign{'aria-hidden' => 'true', 'data-toggle' => 'tooltip', 'data-placement' => 'right', :title => 'Your username and password will be stored in cookie! If you use this computer shared with somebody else we strongly recommend not to use this function!'}
			.form-group
				.col-sm-offset-2.col-sm-10
					= f.submit 'Log in', :class => 'btn btn-default'